<%= form_for [@post, @post.comments.new] do |f| %>

   <div class="form-group">
     <%= f.label :comment %>
     <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Add your comment:" %>
  </div>
   
   <div class="form-group">
     <%= f.submit "Create comment", class: 'btn btn-success' %>
   </div>

 <% end %>